<div class="row d-flex flex-row">
  <% items.each do |item| %>
    <div class="col-md-5 col-lg-3 mb-3">
    <div class="card mt-1">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, format: 'jpeg', size: '150x150', fallback: "no_image.jpg", class: "card-img-top" %>
        <div class="card-body">
          <div class="card-title text-dark">
            <%= item.name %>
          </div>
          <div class="card-text text-dark">
            <%= item.with_tax_price.to_s(:currency, format: "%u%n", unit: "¥", precision: 0 ) %><span>(税込)</span>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  <% end %>
</div>