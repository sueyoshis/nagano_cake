<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5">
      <h2 class="bg-info text-white text-center p-1">会員情報編集</h2>
    </div>
  </div>
  <%= render 'admin/customers/error_form', customer: @customer %>
  <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
    <%= render '/admin/customers/customer_info',f: f %>
    <div class="row mb-3">
      <div class="col-md-4 col-lg-3"></div>
      <%= f.submit "編集内容を保存", class: "btn btn-success col-md-4 col-lg-3" %>
      <span class="col-md-1 col-lg-3"></span>
      <%= link_to "退会する",customers_confirm_path, class: "btn btn-danger col-md-2" %>
    </div>
  <% end %>
</div>
