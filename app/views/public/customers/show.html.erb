<div class="container">
  <div class="row ">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5">
      <h2 class="bg-info text-white text-center p-1">マイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-3">
      <h4>登録情報</h4>
    </div>
    <div class="col-md-2 mb-3">
      <%= link_to "編集する", edit_customers_path, class: "btn btn-sm btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-lg-8 mb-3">
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary">カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-secondary">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-secondary">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-3">
      <h4>配送先</h4>
    </div>
    <div class="col-md-2 mb-3">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-3">
      <h4>注文履歴</h4>
    </div>
    <div class="col-md-2 mb-3">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>
