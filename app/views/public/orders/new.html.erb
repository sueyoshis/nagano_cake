<h2>注文情報入力</h2>

<%= form_with model: @order, url: orders_confirm_path do |f| %>
<h4>支払方法</h4>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

<h4>お届け先</h4>
<%= f.radio_button :address_select, "0" %>
<%= f.label :address_select, "ご自身の住所" %>
<p>
  〒<%= @customer.postal_code %> <%= @customer.address %><br>
  <%= @customer.full_name %>
</p>

<%= f.radio_button :address_select, "1" %>
<%= f.label :address_select, "登録済住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(@customer.addresses.all, :id, :address_display) %>

<%= f.radio_button :address_select, "2" %>
<%= f.label :address_select, "新しいお届け先" %>
<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
<%= f.text_field :postal_code %>
<%= f.label :address, "住所" %>
<%= f.text_field :address %>
<%= f.label :name, "宛名" %>
<%= f.text_field :name %>

<%= f.submit "確認画面へ進む" %>
<% end %>
