<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5">
      <h2 class="bg-info text-white text-center p-1">管理者ログイン</h2>
    </div>
  </div>
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="row mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label col-md-3 col-lg-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control col-md-7 col-lg-5" %>
    </div>
    <div class="row mb-3">
      <%= f.label :password, "パスワード", class: "form-label col-md-3 col-lg-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-7 col-lg-5" %>
    </div>
    <div class="row mb-3">
      <div class="col-md-3 col-lg-2"></div>
        <%= f.submit "ログイン", class: "btn btn-primary col-md-4 col-lg-3" %>
      </div>
    <% end %>
  </div>
</div>


