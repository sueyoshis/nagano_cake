<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5">
      <h2 class="bg-info text-white text-center p-1">ジャンル編集</h2>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genre_path(@genre.id),method: :patch do |f| %>
    <%= render 'error_form', genre: @genre %>
    <div class="row mb-3">
      <%= f.label :name, "ジャンル名", class: "form-label col-md-3 col-lg-2" %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control col-md-4 col-lg-4" %>
      <div class="col-1"></div>
      <%= f.submit "変更を保存", class: "btn btn-success col-md-3 col-lg-2" %>
    </div>
  <% end %>
</div>
