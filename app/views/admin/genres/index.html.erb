<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5">
      <h2 class="bg-info text-white text-center p-1">ジャンル一覧・追加</h2>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <%= render 'error_form', genre: @genre %>
    <div class="row mb-3">
      <%= f.label :name, "ジャンル名", class: "form-label col-md-3 col-lg-2" %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control col-md-4 col-lg-4" %>
      <div class="col-1"></div>
      <%= f.submit "新規登録", class: "btn btn-success col-md-3" %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-11 col-md-5 col-lg-4">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to edit_admin_genre_path(genre.id) do %>
                  <button class="btn btn-sm btn-success">編集する</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>