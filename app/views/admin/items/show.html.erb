<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5">
      <h2 class="bg-info text-white text-center p-1">商品詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: '170x170', fallback: "no_image.jpg" %>
    </div>
    <div class="col-md-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited)%>) 円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
                <span class="text-success font-weight-bold">販売中</span>
              <% else %>
                <span class="text-muted font-weight-bold">販売停止中</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <span class="col-md-6 col-lg-5"></span>
    <%= link_to edit_admin_item_path(@item.id) do %>
      <button class="btn btn-success">編集する</button>
    <% end %>
  </div>
</div>
