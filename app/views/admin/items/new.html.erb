<h2>商品新規登録</h2>

<%= form_with model: @item, url: new_admin_item_path do |f| %>
  <%= f.label :image, "商品画像" %>
  <%= f.attachment_field :image %>
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name %>
  <%= f.label :introduction, "商品紹介" %>
  <%= f.text_area :introduction %>
  <!--ここにジャンルを追加-->
  <%= f.label :price, "税抜き価格" %>
  <%= f.text_field :price %>
  <!--ここに販売ステータスを追加-->
  <%= f.submit "新規登録" %>
<% end %>
