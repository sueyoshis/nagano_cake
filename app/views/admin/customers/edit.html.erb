<h2><%= @customer.full_name %>さんの会員情報編集</h2>

<%= render 'error_form', customer: @customer %>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

  <div class="field">
    <span>会員ID</span>
    <%= @customer.id %>
  </div>

  <%= render 'customer_info', f: f %>

  <div class="field">
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, "false" %>
    <%= f.label :is_active, "退会" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
