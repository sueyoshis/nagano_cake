<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mb-5">
      <h2 class="bg-info text-white text-center p-1">注文履歴詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td>
            <%= link_to admin_customer_path(@order.customer) do%>
              <span class="border-bottom border-dark text-dark">
                <%= @order.customer.full_name %>
              </span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>注文日</th>
          <td>
            <%= @order.created_at.strftime("%Y/%m/%d") %>
          </td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %> <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td>
            <%= @order.payment_method_i18n %>
          </td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
              <%= f.select :status, Order.statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td>
                <%= order_item.item.name %>
              </td>
              <td>
                <%= order_item.with_tax_price.to_s(:delimited) %>
              </td>
              <td>
                <%= order_item.amount %>
              </td>
              <td>
                <%= order_item.subtotal.to_s(:delimited) %>
              </td>
              <td>
                <%= form_with model: order_item, url: admin_order_order_item_path(order_item), method: :patch do |f| %>
                  <%= f.select :production_status, OrderItem.production_statuses_i18n.invert %>
                  <%= f.submit "更新", class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-3 d-flex align-items-end">
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th>
          <td>
            <%= @order.total_price.to_s(:currency, format: "%n%u", unit: "円", precision: 0) %>
          </td>
        </tr>
        <tr>
          <th>送料</th>
          <td>
            <%= @order.postage.to_s(:currency, format: "%n%u", unit: "円", precision: 0) %>
          </td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.billing_amount.to_s(:currency, format: "%n%u", unit: "円", precision: 0) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

